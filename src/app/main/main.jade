div(class="container")
  div
    nav(class="navbar navbar-static-top navbar-inverse")
      div(class="container-fluid")
        div(class="navbar-header")
          a(class="navbar-brand" href="#")
            span(class="glyphicon glyphicon-home")
              |  History
        div(class="collapse navbar-collapse" id="bs-example-navbar-collapse-6")
          ul(class="nav navbar-nav")
            li(class="active")
              a(ng-href="#") Chats

    div(class="btn-group" uib-dropdown is-open="main.isopen")
      button(type="button" class="btn btn-default")
        | {{main.selectedChatName }}
      button(id="single-button" type="button" class="btn btn-default" uib-dropdown-toggle ng-disabled="disabled")
        span(class="caret")
        span(class="sr-only")
          | Toggle Dropdown
      ul(uib-dropdown-menu role="menu" aria-labelledby="single-button")
        li(role="menuitem" ng-repeat="(id, chat) in main.chats")
          a(ng-href="#/chat/{{chat.id}}")
            | {{chat.name}}

    p

    div(class="panel panel-default col-md-7")
      div(class="panel-body")
        table(class="table")
          tr(ng-repeat="message in main.messages")
            td(class="col-md-1") {{message.formatted}}
            td(class="col-md-2") {{message.author}}
            td(class="col-md-5") {{message.msg}}
            td(class="col-md-3")
              div(class="btn-group")
                label(class="btn btn-default" ng-model="radioModel" uib-btn-radio="'{{message.id}}Q'" ng-click="main.selectMessage(message.id, 'question', $event)" uncheckable)
                  | Q
                label(class="btn btn-default" ng-model="radioModel" uib-btn-radio="'{{message.id}}A'" ng-click="main.selectMessage(message.id, 'answer', $event)" uncheckable)
                  | A

    div(class="panel panel-default col-md-4" style="position: fixed; right: 60px;")
      div(class="panel-body")
        | nothing here yet

    div(class="clearfix")

    div
      button(ng-click="loadMore()" class="btn btn-default")
        | load more

mixin inputWithTextContent(name, message)
  !='<input type="radio" name="' + name + '">' + message + '</input>'
